def Kahendotsing(arr, otsitav):
    alg = 0
    lopp = len(arr) - 1
    while alg <= lopp:
        kesk = (alg + lopp) // 2
        if arr[kesk] == otsitav:
            return kesk
        elif arr[kesk] < otsitav:
            alg = kesk + 1
        else:
            lopp = kesk - 1
    return "puudub"

#-------------------------------------------
#Kahendotsingu ajakompleksus: O(logn)
#Lineaarotsingu ajakompleksus: O(n)

